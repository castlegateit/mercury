{
    "prefix": "mercury-",
    "paths": {
        "src": {
            "css": "./src/scss/**/*.scss",
            "js": [
                "./node_modules/jquery/dist/jquery.js",
                "./node_modules/bootstrap/dist/js/bootstrap.js",
                "./node_modules/@castlegate/atlas/src/js/**/*.js",
                "!./node_modules/@castlegate/atlas/src/js/atlas.js",
                "./src/js/**/*.js"
            ]
        },
        "dest": {
            "css": "./dist/css",
            "js": "./dist/js"
        }
    },
    "plugins": {
        "autoprefixer": {
            "remove": false
        },
        "rename": {
            "suffix": ".min"
        },
        "sass": {
            "includePaths": [
                "."
            ],
            "outputStyle": "nested"
        }
    }
}
